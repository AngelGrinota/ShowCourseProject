<UserControl x:Class="EducationProgram.Views.AuthorizationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationProgram.Views"
             xmlns:helpers="clr-namespace:EducationProgram.Helpers"
             xmlns:converters="clr-namespace:EducationProgram.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="#F0F0F0">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <DockPanel LastChildFill="True" Cursor="">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource PrimaryBrush}" Height="60" DockPanel.Dock="Top">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Margin="10,0,0,0">
                    <Image Source="pack://application:,,,/Resources/images/back.png"
                       Width="25" Height="25"
                       Margin="0,0,10,0"
                       Cursor="Hand"
                       ToolTip="Вернуться назад">
                        <Image.InputBindings>
                            <MouseBinding MouseAction="LeftClick"
                  Command="{Binding BackCommand}" />
                        </Image.InputBindings>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                             To="1.0" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                             To="0.5" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Background="#F0F0F0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Center">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                    <!-- Карточка авторизации -->
                    <Border Background="White"
                        CornerRadius="12"
                        Padding="40"
                        Width="550"
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="2">
                        
                        <StackPanel>
                            <TextBlock Text="Вход в систему"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,25"
                                   Foreground="{StaticResource PrimaryBrush}"/>

                            <!-- Логин -->
                            <TextBlock Text="Логин:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,20"
                                 Style="{StaticResource PrimaryTextBoxStyle}"
                                 Padding="15"
                                 FontSize="16"
                                 MaxLength="25"
                                 Background="#F8F9FA"
                                 BorderBrush="#D1C4E9"
                                 BorderThickness="1"/>

                            <!-- Пароль -->
                            <TextBlock Text="Пароль:"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,20">
                                <PasswordBox x:Name="PasswordInputBox"
                                             Style="{StaticResource PrimaryPasswordBoxStyle}"
                                             Padding="15"
                                             FontSize="16"
                                             MaxLength="20"
                                             Background="#F8F9FA"
                                             BorderBrush="#D1C4E9"
                                             BorderThickness="1"
                                             helpers:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource InverseBooleanConverter}}"/>

                                <TextBox x:Name="PasswordVisibleBox"
                                        Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource PrimaryTextBoxStyle}"
                                        Padding="15"
                                        FontSize="16"
                                        MaxLength="20"
                                        Background="#F8F9FA"
                                        BorderBrush="#D1C4E9"
                                        BorderThickness="1"
                                        Visibility="{Binding IsPasswordVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <Image Source="{Binding PasswordVisibilityIcon}"
                                         Width="25" Height="25"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"
                                         Cursor="Hand">
                                    <Image.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding TogglePasswordVisibilityCommand}" />
                                    </Image.InputBindings>
                                </Image>
                            </Grid>

                            <!-- Сообщение об ошибке -->
                            <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="Red"
                                   FontSize="14"
                                   Visibility="{Binding ErrorVisibility}"
                                   Margin="0,0,0,15"/>

                            <!-- Кнопка входа -->
                            <Button Content="Войти"
                                Command="{Binding LoginUserCommand}"
                                Margin="0,0,0,15"
                                Padding="15"
                                Height="50"
                                FontSize="18"
                                FontWeight="Bold"
                                Style="{StaticResource AccentButtonStyle}" Cursor="Hand"/>

                            <!-- Переход к регистрации -->
                            <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Hyperlink Command="{Binding GoToRegistrationCommand}">
                                    <TextBlock Text="Нет аккаунта? Зарегистрироваться"
                                               FontSize="16"
                                               Foreground="{StaticResource PurpleBrush}"/>
                                    <!-- Добавлено подчёркивание на hover для лучшей интерактивности -->
                                    <Hyperlink.Style>
                                        <Style TargetType="Hyperlink">
                                            <Setter Property="TextDecorations" Value="None"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Hyperlink.Style>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
