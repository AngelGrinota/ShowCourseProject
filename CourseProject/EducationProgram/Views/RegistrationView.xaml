<UserControl x:Class="EducationProgram.Views.RegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:EducationProgram.Converters"
             xmlns:local="clr-namespace:EducationProgram.Views"
             xmlns:helpers="clr-namespace:EducationProgram.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800" Background="#F0F0F0">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <Border Background="{StaticResource PrimaryBrush}" Height="60" DockPanel.Dock="Top">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="10,0,0,0">
                    <Image Source="pack://application:,,,/Resources/images/back.png" Width="25" Height="25" Margin="0,0,10,0" Cursor="Hand" ToolTip="Вернуться назад">
                        <Image.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding BackCommand}" />
                        </Image.InputBindings>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Background="#F0F0F0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                    <Border Background="White" CornerRadius="12" Padding="40" Width="550" 
                            BorderBrush="{StaticResource AccentBrush}" BorderThickness="2">
                        <StackPanel Cursor="">
                            <TextBlock Text="Создать аккаунт"
                                       FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"
                                       Margin="0,0,0,25" Foreground="{StaticResource PrimaryBrush}"/>

                            <TextBlock Text="Логин:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="LoginTextBox" Style="{StaticResource PrimaryTextBoxStyle}"
                                    Text="{Binding Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,0,0,20" Padding="15" FontSize="16" Background="#F8F9FA"
                                    BorderBrush="#D1C4E9" BorderThickness="1" MaxLength="25"/>

                            <TextBlock Text="Фамилия:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PrimaryTextBoxStyle}"
                                     Margin="0,0,0,20" Padding="15" FontSize="16" Background="#F8F9FA"
                                     BorderBrush="#D1C4E9" BorderThickness="1" MaxLength="45"/>

                            <TextBlock Text="Имя:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PrimaryTextBoxStyle}"
                                     Margin="0,0,0,20" Padding="15" FontSize="16" Background="#F8F9FA"
                                     BorderBrush="#D1C4E9" BorderThickness="1" MaxLength="45"/>

                            <TextBlock Text="Отчество:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Patronymic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PrimaryTextBoxStyle}"
                                     Margin="0,0,0,20" Padding="15" FontSize="16" Background="#F8F9FA"
                                     BorderBrush="#D1C4E9" BorderThickness="1" MaxLength="45"/>


                            <TextBlock Text="Пароль:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,20">
                                <PasswordBox x:Name="PasswordBox" Style="{StaticResource PrimaryPasswordBoxStyle}"
                                             helpers:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="15" FontSize="16" Background="#F8F9FA" MaxLength="20"
                                             BorderBrush="#D1C4E9" BorderThickness="1"
                                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource InverseBooleanConverter}}"/>

                                <TextBox x:Name="PasswordVisibleBox"
                                         Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource PrimaryTextBoxStyle}"
                                         Padding="15" FontSize="16" MaxLength="20"
                                         Background="#F8F9FA" BorderBrush="#D1C4E9" BorderThickness="1"
                                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <Image Source="{Binding PasswordVisibilityIcon}"
                                         Width="25" Height="25"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"
                                         Cursor="Hand">
                                    <Image.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding TogglePasswordVisibilityCommand}" />
                                    </Image.InputBindings>
                                </Image>
                            </Grid>

                            <TextBlock Text="Подтвердите пароль:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,25">
                                <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PrimaryPasswordBoxStyle}"
                                             helpers:PasswordBoxHelper.Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="15" FontSize="16" Background="#F8F9FA" MaxLength="20"
                                             BorderBrush="#D1C4E9" BorderThickness="1"
                                             Visibility="{Binding IsConfirmPasswordVisible, Converter={StaticResource InverseBooleanConverter}}"/>

                                <TextBox x:Name="ConfirmPasswordVisibleBox"
                                         Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource PrimaryTextBoxStyle}"
                                         Padding="15" FontSize="16" MaxLength="20"
                                         Background="#F8F9FA" BorderBrush="#D1C4E9" BorderThickness="1"
                                         Visibility="{Binding IsConfirmPasswordVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <Image Source="{Binding ConfirmPasswordVisibilityIcon}"
                                         Width="25" Height="25"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"
                                         Cursor="Hand">
                                    <Image.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleConfirmPasswordVisibilityCommand}" />
                                    </Image.InputBindings>
                                </Image>
                            </Grid>

                            <TextBlock Text="Группа:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Groups}" Style="{StaticResource PrimaryComboBoxStyle}" ItemContainerStyle="{StaticResource PrimaryComboBoxItemStyle}"
                                      SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                                      DisplayMemberPath="GroupName"
                                      Margin="0,0,0,25" Padding="10" FontSize="16"
                                      Background="#F8F9FA" BorderBrush="#D1C4E9" BorderThickness="1"/>

                            <TextBlock x:Name="ErrorMessage"
                                       Text="{Binding ErrorMessage}"
                                       Visibility="{Binding ErrorVisibility}"
                                       Foreground="Red" FontSize="14" Margin="0,0,0,15"/>

                            <Button x:Name="RegisterButton"
                                    Content="Зарегистрироваться"
                                    Command="{Binding RegisterCommand}"
                                    Margin="0,0,0,15" Padding="15" Height="50" FontSize="18"
                                    FontWeight="Bold" Style="{StaticResource AccentButtonStyle}"
                                    Cursor="Hand"/>

                            <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Hyperlink Command="{Binding GoToAuthorizationCommand}">
                                    <TextBlock Text="Уже есть аккаунт? Войти"
                                               FontSize="16"
                                               Foreground="{StaticResource PurpleBrush}"/>
                                    <!-- Добавлено подчёркивание на hover для лучшей интерактивности -->
                                    <Hyperlink.Style>
                                        <Style TargetType="Hyperlink">
                                            <Setter Property="TextDecorations" Value="None"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Hyperlink.Style>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
