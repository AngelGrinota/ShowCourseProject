<Window x:Class="EducationProgram.Windows.InformationWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результат теста"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None" 
        Background="Transparent"
        AllowsTransparency="True">

    <Border Style="{StaticResource CardBorderStyle}"
            Background="{StaticResource BackgroundBrush}"
            Width="400" MinHeight="250" Padding="25" BorderThickness="2" BorderBrush="{StaticResource PurpleBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Message}"
                       Visibility="{Binding MessageVisibility}"
                       TextWrapping="Wrap"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryBrush}"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,20,0,20" />

            <StackPanel Visibility="{Binding ResultVisibility}" VerticalAlignment="Center">
                <TextBlock Text="Тест завершен!" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <Border Background="#F3E5F5" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Ваш результат" FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <TextBlock Text="{Binding Score}" FontSize="36" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text=" / " FontSize="24" VerticalAlignment="Bottom" Foreground="#888" Margin="5,0,5,6"/>
                            <TextBlock Text="{Binding TotalPoints}" FontSize="24" VerticalAlignment="Bottom" Foreground="#888" Margin="0,0,0,6"/>
                        </StackPanel>
                        <TextBlock Text="баллов" FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TextBlock HorizontalAlignment="Center" Foreground="{StaticResource SecondaryBrush}" FontSize="16">
                    <Run Text="Правильных ответов: "/>
                    <Run Text="{Binding CorrectAnswers}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                    <Run Text=" из "/>
                    <Run Text="{Binding TotalQuestions}"/>
                </TextBlock>
            </StackPanel>

            <Button Grid.Row="1"
                    Content="OK"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="200"
                    Height="45"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="OKButton_Click"
                    Cursor="Hand"/>
        </Grid>
    </Border>
</Window>