<Window x:Class="EducationProgram.Windows.DeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение удаления"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None" 
        Background="Transparent"
        AllowsTransparency="True"
        Width="400" Height="200">

    <Border Background="White" CornerRadius="10" Padding="20" BorderThickness="2" BorderBrush="{StaticResource PurpleBrush}">
        <Grid Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок/вопрос -->
            <TextBlock x:Name="QuestionTextBlock"
                       Grid.Row="0"
                       Text="Вы уверены?"
                       TextWrapping="Wrap"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Объяснение -->
            <TextBlock x:Name="DescriptionTextBlock"
                       Grid.Row="1"
                       Text=""
                       TextWrapping="Wrap"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Да" Height="42" Width="100" Margin="5" Click="YesButton_Click" Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="Нет" Width="100" Margin="5" Click="NoButton_Click" Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
